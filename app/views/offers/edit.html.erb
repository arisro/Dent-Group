<div class="box offers-box">
	<h1>Edit offer - <%= @offer.title %></h1>
	<%= simple_form_for(@offer, html: { role: "form", id: 'addOfferForm' }, defaults: { input_html: { class: 'form-control' } } ) do |f| %>

		<%= f.error_notification %>
		<div class="form-inputs">
			<%= f.input :type, collection: [['Selling',1],['Buying',2]], label: 'Type', include_blank: false %>
			<%= f.input :title, :required => true, label: 'Title' %>
			<%= f.input :summary, :required => true, label: 'Summary' %>
			<%= f.input :body, :required => true, label: 'Description', as: :ckeditor, input_html: { ckeditor: { height: 300 } } %>
			<%= f.input :contact_email, :required => false, label: 'Contact e-mail' %>
			<%= f.input :contact_phone, :required => false, label: 'Contact phone' %>
		</div>

		<br/>
        <%= f.button :submit, "Update", class: "btn btn-primary" %>
        <%= link_to "Cancel", offer_path(@offer), class: "btn btn-warning" %>
        <%= link_to "Delete", offer_path(@offer), method: :delete, :confirm => "Are you sure you want to delete this offer?", class: "btn btn-danger" %>
	<% end %>
</div>