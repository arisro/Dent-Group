<span class="label label-info search-label">Job</span><h3><%= link_to object.title, object %></h3>

<ul class="search-job-details pull-left">
	<li>Company: <span><%= object.company_name %></span></li>
	<li>Location: <span><%= "#{object.city}, #{object.country}" %></span></li>
	<li>Type: <span><%= ['', 'Full time', 'Part time'][object.type] %></span></li>
</ul>
<ul class="search-job-details pull-left">
	<li>Positions opened: <span><%= object.count %></span></li>
	<li>Valid until: <span><%= object.valid_until.to_formatted_s(:date) %></span></li>
	<li>Posted by: <span><%= link_to object.user.full_name, user_path(object.user) %></span></li>
</ul>