<div class="box supplier-box">
	<div class="supplier-name">
		<h1><%= @supplier.name %></h1>
		<h5><span><%= "#{@supplier.city}, #{@supplier.country}" %></span></h5>
	</div>
	<div class="supplier-links">
		<%= link_to 'Edit', edit_supplier_path(@country, @supplier), class: 'btn btn-primary btn-sm' %>
	</div>

	<hr/>

	<div class="supplier-info">
		<ul>
			<li>E-mail: <span><%= @supplier.email %></span></li>
			<li>Phone: <span><%= @supplier.phone %></span></li>
			<li>Address: <span><%= @supplier.address %></span></li>
		</ul>
		<ul>
			<li>Views: <span><%= @supplier.views %></span></li>
			<li>Posted by: <span><%= link_to @supplier.user.full_name, user_path(@supplier.user) %></span></li>
		</ul>
	</div>

	<hr/>

	<div class="supplier-description">
		<%= @supplier.description %>
	</div>

	<hr />

	<div class="comment-form">
		<%= simple_form_for([@supplier, @comment], html: { role: "form", id: 'addSupplierCommentForm' }, defaults: { input_html: { class: 'form-control' } } ) do |f| %>

		<%= f.error_notification %>
		<div class="form-inputs">
			<%= image_tag "/profile_pictures/#{current_user.profile_picture}" %>
			<%= f.input :body, :required => true, label: 'Add Comment' %>
			<%= f.button :submit, "Post", class: "btn btn-primary" %>
		</div>
	<% end %>
	</div>

	<div class="comments-list">
	<% @comments.each do |comment| %>
		<div class="comment-item">
			<div class="user-icon">
				<a href="<%= user_path(comment.user) %>">
					<%= image_tag "/profile_pictures/#{comment.user.profile_picture}" %>
					<span><%= comment.user.full_name %></span>
				</a>
			</div>
			<div class="comment-body">
				<span class="supplier-item-time">
					added on <i><%= comment.created_at.to_formatted_s(:date) %>
					<%= link_to "Delete", supplier_supplier_comment_path(@supplier,comment), method: :delete, :confirm => "Are you sure you want to delete this comment?", class: "btn btn-danger btn-xs" %>
				</span>
				<p><%= comment.body %></p>
			</div>
		</div>
	<% end %>
	</div>
</div>