<% content_for :page_location, t('suppliers.title') %>

<div class="row">
	<div class="col-sm-12 suppliers-box">
		<h2 class="hl top-zero"><%= t('suppliers.title') %></h2>
		<hr/>

    <% if policy(Supplier).new? %>
      <%= link_to t('suppliers.add_new_supplier'), new_supplier_path %>
    <% end %>
		<br/>

		<%= paginate @suppliers %>
		
		<div class="suppliers-list row col-sm-12">
			<div class="col-sm-6">
				<% @suppliers.each_with_index do |supplier, i| %>
					<% next if i.odd? %>
					<div class="supplier-item clearfix">
						<% unless supplier.image_file_name.nil? %>
						<div class="supplier-logo col-sm-2">
							<%= link_to image_tag(supplier.image.url(:thumb)), supplier %>
						</div>
						<% end %>
						<div class="supplier-details col-sm-9">
							<a href="<%= supplier_path(@country,supplier) %>"><h4><%= supplier.name %></h4></a>
							<p class="supplier-item-short-description"><%= supplier.short_description %></p>
							<p class="supplier-item-location"><span class="supplier-item-location"><%= supplier.name %></span> <%= t('in') %> <span class="supplier-item-location"><%= "#{supplier.city}, #{supplier.country}" %></span></p>
							<span class="supplier-item-time"><%= t('posted_on') %> <i><%= supplier.created_at.to_formatted_s(:date) %></i> <%= t('by') %> <%= link_to supplier.user.full_name, user_path(supplier.user) %></span>
						</div>
					</div>
				<% end %>
			</div>
			<div class="col-sm-6">
				<% @suppliers.each_with_index do |supplier, i| %>
					<% next if i.even? %>
					<div class="supplier-item clearfix">
						<% unless supplier.image_file_name.nil? %>
						<div class="supplier-logo col-sm-2">
							<%= link_to image_tag(supplier.image.url(:thumb)), supplier %>
						</div>
						<% end %>
						<div class="supplier-details col-sm-9">
							<a href="<%= supplier_path(@country,supplier) %>"><h4><%= supplier.name %></h4></a>
							<p class="supplier-item-short-description"><%= supplier.short_description %></p>
							<p class="supplier-item-location"><span class="supplier-item-location"><%= supplier.name %></span> <%= t('in') %> <span class="supplier-item-location"><%= "#{supplier.city}, #{supplier.country}" %></span></p>
							<span class="supplier-item-time"><%= t('posted_on') %> <i><%= supplier.created_at.to_formatted_s(:date) %></i> <%= t('by') %> <%= link_to supplier.user.full_name, user_path(supplier.user) %></span>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>