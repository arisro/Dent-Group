<div class="sidebar sidebar-left sidebar-chat">
  <div class="search-box">
    <div class="chat-toggle">
        <a id="chat-toggle-link" href="" title="Toggle chat"><i class="glyphicon glyphicon-circle-arrow-left"></i></a>
    </div>
    <input class='form-control' type="text" placeholder="Search" />
  </div>
  <hr />
  <div class="chat-box">
    <div id="chatbox" data-uid="<%= current_user.id %>" data-key="<%= Digest::MD5.hexdigest("#{current_user.id}saltlol") %>">

    </div>
    <ul class="chat-list">
      <% @online_users.each do |user| %>
      <li class="chat-user-item">
        <a class="chat-link" href="<%= user_path(user) %>" title="Click to chat">
          <%= image_tag "/profile_pictures/#{user.get_profile_picture}", class: "chat-item-image" %>
          <span class="chat-user-name"><%= user.full_name %></span>
          <br/>
          <span class="chat-user-specialization"><%= user.specialization %></span>
        </a>
      </li>
      <% end %>
    </ul>
  </div>
</div>