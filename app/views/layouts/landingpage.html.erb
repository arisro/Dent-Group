<!doctype html>
<html lang="en" ng-app="Drs">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <title><%= content_for?(:title) ? yield(:title) : "Drs" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Drs" %>">

    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,600,300,200&subset=latin,latin-ext' rel='stylesheet' type='text/css'>

    <%= csrf_meta_tags %>

    <link rel="prefetch" href="images/zoom.png">
  </head>
  <body id="lp">
    <header>
      <div class="navbar navbar-fixed-top" data-activeslide="1">
        <div class="container">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <div class="nav-collapse collapse navbar-responsive-collapse">
            <ul class="nav row">
              <%= render 'layouts/landingpage_navigation_links' %>
            </ul>
            <div class="row">
              <div class="col-sm-2 active-menu"></div>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <!-- === Arrows === -->
  <div id="arrows">
    <div id="arrow-up" class="disabled"></div>
    <div id="arrow-down"></div>
    <div id="arrow-left" class="disabled visible-lg"></div>
    <div id="arrow-right" class="disabled visible-lg"></div>
  </div><!-- /.arrows -->

  <!-- === MAIN Background === -->
  <div class="slide story" id="slide-1" data-slide="1">
    <div class="container">
      <div id="home-row-1" class="row clearfix">
        <div class="col-12">
          <h1 class="font-semibold">DENTAL <span class="font-thin">SOMETHING</span></h1>
          <h4 class="font-thin">We are a <span class="font-semibold">closed community</span> dedicated for dentists.</h4>
          <br>
          <br>
        </div><!-- /col-12 -->
      </div><!-- /row -->
      <div id="home-row-2" class="row clearfix">
        <div class="col-12 col-sm-2 feat-badge"><div class="home-hover navigation-slide" data-slide="4"><img src="/assets/s02.png"></div><span>PROFESSIONAL</span></div>
        <div class="col-12 col-sm-2 feat-badge"><div class="home-hover navigation-slide" data-slide="3"><img src="/assets/s01.png"></div><span>FRIENDLY</span></div>
        <div class="col-12 col-sm-2 feat-badge"><div class="home-hover navigation-slide" data-slide="5"><img src="/assets/s03.png"></div><span>SUITABLE</span></div>
        <div class="col-12 col-sm-2">&nbsp;</div>
        <div class="col-12 col-sm-3 signup-container">
          <div class="signup" ng-controller="UsersController">
            <p>Sign up</p>
            <%= simple_form_for(:user, html: { id: "signupForm", role: "form" } ) do |f| %>
              <div class="form-inputs">
                <%= f.input :fname, :required => false, label: false, placeholder: "First name", input_html: { class: "form-control", 'ng-model' => "newUser.fname" }, wrapper_html: { class: 'form-group', 'ng-class' => "{'has-error': register_errors.fname}" } %>
                <%= f.input :lname, :required => false, label: false, placeholder: "Last name", input_html: { class: "form-control", 'ng-model' => "newUser.lname" }, wrapper_html: { class: 'form-group', 'ng-class' => "{'has-error': register_errors.lname}" } %>
                <div class="errors-container" ng-show="register_errors.fname || register_errors.lname">
                  <p class="text-danger">Please type in your first and last names</p>
                </div>

                <%= f.input :email, :required => false, label: false, placeholder: "Your e-mail", input_html: { class: "form-control", 'ng-model' => "newUser.email" }, wrapper_html: { class: 'form-group', 'ng-class' => "{'has-error': register_errors.email}" } %>
                <div class="errors-container" ng-show="register_errors.email">
                  <p class="text-danger">Please type a valid e-mail address</p>
                </div>

                <%= f.input :password, :required => false, label: false, placeholder: "Password", input_html: { class: "form-control", 'ng-model' => "newUser.password" }, wrapper_html: { class: 'form-group', 'ng-class' => "{'has-error': register_errors.password}" } %>
                <div class="errors-container" ng-show="register_errors.password">
                  <p class="text-danger" ng-repeat="err in register_errors.password">Password {{err}}</p>
                </div>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Create account", class: "btn btn-success btn-lg", 'ng-click' => 'signUp()' %>
              </div>
            <% end %>
          </div>
        </div>
      </div><!-- /row -->
    </div><!-- /container -->
  </div><!-- /slide1 -->

