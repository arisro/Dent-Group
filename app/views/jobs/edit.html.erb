<% content_for :page_location, "Jobs" %>

<div class="row">
	<div class="col-sm-12 jobs-box">
		<h2 class="hl top-zero">Edit job - <%= @job.title %></h2>
		<hr/>

		<%= simple_form_for(@job, html: { role: "form", id: 'addJobForm' }, defaults: { input_html: { class: 'form-control' } } ) do |f| %>

			<%= f.error_notification %>
			<div class="form-inputs">
				<%= f.input :company_name, :required => true, label: 'Company name' %>
				<%= f.input :title, :required => true, label: 'Job title' %>
				<%= f.input :description, :required => true, label: 'Description', as: :ckeditor, input_html: { ckeditor: { height: 300 } } %>
				<%= f.input :country, :required => true, label: 'Country' %>
				<%= f.input :city, :required => true, label: 'City' %>

				<%= f.input :type, collection: [['Full time',1],['Part time',2]], label: 'Type', include_blank: false %>
				<%= f.input :count, label: 'Count' %>
				<%= f.input :offer, :required => true, label: 'Wage offer' %>
				<%= f.input :valid_until, :as => :date_picker, :required => true, label: 'Valid until', :input_html => {:class => 'col-span-3 form-control'} %>
				<%= f.input :contact_email, :required => false, label: 'Contact e-mail' %>
				<%= f.input :contact_phone, :required => false, label: 'Contact phone' %>
			</div>

			<br/>
	        <%= f.button :submit, "Save", class: "btn btn-green" %>
	        <%= link_to "Cancel", job_path(@job), class: "btn btn-warning" %>
	        <%= link_to "Delete", job_path(@job), method: :delete, :confirm => "Are you sure you want to delete this announcement?", class: "btn btn-danger" %>
		<% end %>
	</div>
</div>