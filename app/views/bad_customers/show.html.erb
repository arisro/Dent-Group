<div class="box customer-box">
	<div class="customer-title">
		<h1><%= "#{@customer.name} (#{@customer.cnp})" %></h1>
	</div>
	<div class="customer-links">
		<%= link_to 'Edit', edit_bad_customer_path(@customer), class: 'btn btn-primary btn-sm' %>
	</div>

	<div class="customer-info">
		Added by <%= link_to @customer.user.full_name, user_path(@customer.user) %>
	</div>

	<div class="customer-message">
		<%= @customer.message %>
	</div>

	<hr />

	<div class="comment-form">
		<%= simple_form_for([@customer, @comment], html: { role: "form", id: 'addCommentForm' }, defaults: { input_html: { class: 'form-control' } } ) do |f| %>

		<%= f.error_notification %>
		<div class="form-inputs">
			<%= image_tag "/profile_pictures/#{current_user.profile_picture}" %>
			<%= f.input :body, :required => true, label: 'Add Comment' %>
			<%= f.button :submit, "Post", class: "btn btn-primary" %>
		</div>
	<% end %>
	</div>

	<div class="comments-list">
	<% @comments.each do |comment| %>
		<div class="comment-item">
			<div class="user-icon">
				<a href="<%= user_path(comment.user) %>">
					<%= image_tag "/profile_pictures/#{comment.user.profile_picture}" %>
					<span><%= comment.user.full_name %></span>
				</a>
			</div>
			<div class="comment-body">
				<span class="customer-item-time">
					added on <i><%= comment.created_at.to_formatted_s(:date) %>
					<%= link_to "Delete", bad_customer_bad_customer_comment_path(@customer,comment), method: :delete, :confirm => "Are you sure you want to delete this comment?", class: "btn btn-danger btn-xs" %>
				</span>
				<p><%= comment.body %></p>
			</div>
		</div>
	<% end %>
	</div>
</div>