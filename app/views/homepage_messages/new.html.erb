<% content_for :page_location, "Homepage messages" %>

<div class="row">
	<div class="col-sm-12">
		<h3 class="hl">Add new message</h3>
		<hr>
		<%= simple_form_for(@message, url: homepage_messages_path, html: { role: "form", id: 'addMessageForm' }, defaults: { input_html: { class: 'form-control' } } ) do |f| %>

			<%= f.error_notification %>
			<div class="form-inputs">
				<%= f.input :title, :required => true, label: 'Title' %>
				<%= f.input :website_country, collection: { 'International' => 'int', 'Romania' => 'ro', 'Germania' => 'de' }, include_blank: false %>
				<%= f.input :body, :required => true, label: 'Content', as: :ckeditor %>
				<%= f.input :published_at, :as => :datetime_picker, :required => true, label: 'Publish at', :input_html => {:class => 'col-span-3 form-control'} %>
			</div>

			<br/>
	        <%= f.button :submit, "Post", class: "btn btn-primary btn-dark" %>
		<% end %>
	</div>
</div>